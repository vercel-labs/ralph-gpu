{
  "name": "ralph-gpu",
  "version": "0.0.7",
  "description": "Minimal WebGPU shader library",
  "author": "matiasngf",
  "homepage": "https://ralph-gpu.labs.vercel.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/vercel-labs/ralph-gpu"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist tsconfig.tsbuildinfo && webpack --mode production && tsc --emitDeclarationOnly && node scripts/bundle-size.js",
    "build:size": "rm -rf dist tsconfig.tsbuildinfo && webpack --mode production && tsc --emitDeclarationOnly && node scripts/bundle-size.js --update-readme",
    "size": "node scripts/bundle-size.js",
    "size:update": "node scripts/bundle-size.js --update-readme",
    "dev": "webpack --mode development --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "test:browser": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@swc/core": "^1.9.3",
    "@types/node": "^22.10.2",
    "@vitest/ui": "^2.1.8",
    "@webgpu/types": "^0.1.68",
    "jsdom": "^27.4.0",
    "swc-loader": "^0.2.6",
    "terser-webpack-plugin": "^5.3.16",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "peerDependencies": {
    "@webgpu/types": "^0.1.51"
  },
  "peerDependenciesMeta": {
    "@webgpu/types": {
      "optional": true
    }
  }
}
