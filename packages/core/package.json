{
  "name": "ralph-gpu",
  "version": "0.0.1",
  "description": "Minimal WebGPU shader library",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "webpack --mode production && tsc --emitDeclarationOnly",
    "dev": "webpack --mode development --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@swc/core": "^1.9.3",
    "@types/node": "^22.10.2",
    "@vitest/ui": "^2.1.8",
    "@webgpu/types": "^0.1.68",
    "jsdom": "^27.4.0",
    "swc-loader": "^0.2.6",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "peerDependencies": {
    "@webgpu/types": "^0.1.51"
  },
  "peerDependenciesMeta": {
    "@webgpu/types": {
      "optional": true
    }
  }
}
