{
  "name": "@ralph/core",
  "version": "0.0.1",
  "description": "Autonomous AI agent loop library - the Ralph Wiggum pattern",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "postinstall": "npx playwright install chromium || echo 'Playwright browser install skipped (optional for browser tools)'"
  },
  "peerDependencies": {
    "ai": "^6.0.0"
  },
  "dependencies": {
    "bash-tool": "^1.0.0",
    "zod": "^3.23.0",
    "playwright": "^1.48.0",
    "ms": "^2.1.3",
    "nanoid": "^5.0.0"
  },
  "devDependencies": {
    "@types/ms": "^0.7.34",
    "@types/node": "^22.10.2",
    "ai": "^6.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "ai",
    "agent",
    "loop",
    "autonomous",
    "llm"
  ],
  "license": "MIT"
}
